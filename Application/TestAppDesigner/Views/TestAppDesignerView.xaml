<UserControl x:Class="TestAppDesigner.Views.TestAppDesignerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmmodels="clr-namespace:TestAppDesigner.ViewModels"
             xmlns:local="clr-namespace:TestAppDesigner.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewmmodels:TestAppViewModel x:Name="viewModel"/>
    </UserControl.DataContext>
    <Grid>
        <TextBlock Text="{Binding TestAppModel.DocumentText}" ></TextBlock>
    </Grid>
</UserControl>
